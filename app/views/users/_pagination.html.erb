<div class="pagination-wrapper">
	<% if @users.total_pages >= 10 %>
		<div class="pagination hidden-xs" style="float:left;">
			<ul class="pagination">
				<li class="prev previous_page <%= params[:page] != "1" ? "" : "disabled"%>">
					<a rel="next" href="<%= "/users?page=1&direction=#{direction_param}&sort=#{sort_param}" %>">First</a>
				</li>
			</ul>
		</div>
	<% end %>
