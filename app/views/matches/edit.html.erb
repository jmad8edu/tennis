<% provide(:title, 'Edit match') %>
<h1>Editing Match</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2 col-xs-12">
	<%= form_for(@match) do |f| %>
	  <%= render 'shared/error_messages', object: @match %>
	  <%= render 'fields', f: f %>
      <div class="row">
      	<%= f.submit "Save", class: "btn btn-large btn-primary" %>
      </div>
      <div class="row">
        <%= link_to "Cancel", @match, class: "btn btn-large btn-danger" %>
	    </div>
	<% end %>
  </div>
</div>
