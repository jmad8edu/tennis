
<li class="visible-xs-block">
	<%= link_to "Notifications", notifications_path %>
</li>
<li class="dropdown hidden-xs">
	<%= link_to "<span class='glyphicon glyphicon-bell'></span>".html_safe, {controller: "notifications", action: "index", offset: 0, remote: true}, {id:"notification-link", class:"dropdown-toggle", data: {toggle: "dropdown"}, role: "button", aria: {expanded: "false"}} %>
	<ul class="dropdown-menu notifications", style="height:300px;overflow:auto;" role="menu" aria-labelledby="dLabel">
		<li class="notification-header">
			<div>
				<div>
					<h4>Notifications</h4>
				</div>
				<div style="text-align:right;">
					<%= link_to notifications_path do %>
						<h4>View all <i class="glyphicon glyphicon-circle-arrow-right"></i></h4>
					<% end %>
				</div>
			</div>
		</li>
		<div class="notification-loading" id="notifications-container">
			<%= image_tag "ajax-loader.gif" %>
			<div>
				Loading...
			</div>
		</div>
	</ul>
</li>