$("#<%= @notification.id %>_notification").toggleClass("notification-read");
$("#<%= @notification.id %>_notification div.glyphicon").toggleClass("glyphicon-remove-circle").toggleClass("glyphicon-ok-circle");
$("#<%= @notification.id %>_notification div.glyphicon-ok-circle").attr("data-original-title", "Mark as read");
$("#<%= @notification.id %>_notification div.glyphicon-remove-circle").attr("data-original-title", "Mark as unread");

if (<%= @notification.notified %>){
	$("#notification-count-tab").text(parseInt($("#notification-count-tab").text()) - 1);
	$("#notification-count-responsive").text(parseInt($("#notification-count-responsive").text()) - 1);
}else{
	$("#notification-count-tab").text(parseInt($("#notification-count-tab").text()) + 1);
	$("#notification-count-responsive").text(parseInt($("#notification-count-responsive").text()) + 1);
}
